<div class='container px-5 px-sm-0'>
  <div class='row'> 
    <%= render 'books/sidebar', booknew: @booknew, user: @user %>

    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>

      <table class='table table-hover table-inverse'>        
        <tbody>
            <tr>
              <td class=userimage><%= image_tag @user.get_profile_image(100, 100) %><br>
              <%= link_to @user.name, user_path(@user[:id]) %></td>
              <td class=booktitle><%=link_to @book.title, book_path(@book[:id]) %></td>
              <td %><%= @book.body %></td>

              <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book[:id]), class:"btn btn-success" %></td>
              <td><%= link_to "destroy", book_path(@book[:id]), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-danger"%></td>
              <% end %>

            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
