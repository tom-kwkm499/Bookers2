<div class='container px-5 px-sm-0'>
  <div class='row'> 
    <%= render 'books/sidebar', booknew: @booknew, user: @user %>

    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <!-- ユーザー一覧表示 -->
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |users| %>
            <tr>
              <td class=userimage><%= image_tag users.get_profile_image(100, 100) %></td>
              <td class=booktitle><%=users.name %></td>
              <td %><%=link_to "Show", user_path(users.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>