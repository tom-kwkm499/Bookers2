<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>

	    <table class='table'>
	      <tr>
	        <%= image_tag @user.get_image(100, 100) %> 
					
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= @user.name %></th> 
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>  
	      </tr>
	    </table>
	    <div class='row'>
				<button type="button" class="btn btn-outline-secondary btn-block">
					<%= link_to edit_user_path(@user.id) do %>
						<i class="fa-solid fa-user-gear" ></i>
					<% end %>
				</button>
	    </div>

			<%= render 'books/newbook', booknew: @booknew %>

	  </div>
	  <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <!-- 投稿した書籍一覧表示 -->
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
					<% @books.each do |book| %>
						<tr>
							<td class=userimage><%= image_tag book.user.get_image(100, 100) %></td>
							<td class=booktitle><%=link_to book.title, book_path(book.id) %></td>
							<td class=bookbody><%=book.body %></td>
						</tr>
					<% end %>
				</tbody>
	    </table>
	  </div>
	</div>
</div>